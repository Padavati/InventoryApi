@model Inventory.Entity.Models.Product

<form method="post">
    <h2>Product Details</h2>
    <hr />
    <div class="form-group">
        <label>Product Name</label>
        <input type="text" asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Product Description</label>
        <input type="text" asp-for="ProductDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label>Product Price</label>
        <input type="text" asp-for="ProductPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label>Quantity In Stock</label>
        <input type="text" asp-for="QuantityInStock" class="form-control" />
    </div>
    <input type="submit" value="Save" class="btn btn-success" />
    <input type="button" value="Reset" class="btn btn-primary" />
</form>
<hr/>
@if (ViewBag.status == "OK")
{
    <div class="alert alert-success">
        @ViewBag.message
    </div>
}
else if(ViewBag.status=="Error")
{
    <div class="alert alert-danger">
        @ViewBag.message
    </div>
}