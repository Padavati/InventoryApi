@model IEnumerable<Inventory.Entity.Models.Order>


@{
    ViewBag.Title = "Order List";
}

<h2>Order List</h2>

<p>
    @Html.ActionLink("OrderDetails", "Order")
</p>

<table class="table">
    <tr>
        <th>Order Id</th>
        <th>Order Date</th>
        <th>Product Id</th>
        <th>Quantity</th>
        <th>Order Total</th>
        <th></th>
    </tr>

    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderId</td>
            <td>@order.OrderDate</td>
            <td>@order.ProductId</td>
            <td>@order.Quantity</td>
            <td>@order.OrderTotal</td>

            <td><a asp-controller="Order" asp-action="GetOrderDetails" asp-route-OrderId="@order.OrderId" class="btn btn-primary">Edit</a></td>
            <td><a asp-controller="Order" asp-action="DeleteOrderDetails" asp-route-OrderId="@order.OrderId" class="btn btn-danger">Delete</a></td>

        </tr>
    }
</table>
