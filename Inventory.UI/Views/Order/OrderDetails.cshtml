@model Inventory.Entity.Models.Order

<form method="post">
    <h2>Order Details </h2>
    <hr />
    <div class="form-group">
        <label>Product Id</label>
        <input type="text" asp-for="ProductId" class="form-control" />
    </div>
    <div class="form-group">
        <label>Quantity</label>
        <input type="text" asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label>Order Total</label>
        <input type="text" asp-for="OrderTotal" class="form-control" />
    </div>
    
    <input type="submit" value="Save" class="btn btn-success" />
    <input type="button" value="Reset" class="btn btn-primary" />

    <hr />
    @if (ViewBag.status == "OK")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>