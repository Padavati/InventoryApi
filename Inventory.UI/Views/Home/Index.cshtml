@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron">
    <h1>Welcome to the Inventory Management System</h1>
    <p class="lead">Efficiently manage your inventory and streamline your operations.</p>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Products</h5>
                <p class="card-text">View and Manage inventory with Quantity tracking</p>
                <a asp-controller="Product" asp-action="ProductDetails" class="btn btn-primary">Manage Products</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Orders</h5>
                <p class="card-text">View and Manage orders, track order history, and update order status.</p>
                <a asp-controller="Orders" asp-action="Index" class="btn btn-primary">Manage Orders</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Suppliers</h5>
                <p class="card-text">View and Manage Supplier.</p>
                <a asp-controller="Supplier" asp-action="Index" class="btn btn-primary">Manage Suppliers</a>
            </div>
        </div>
    </div>

    <!-- Add more cards for additional actions or information as needed -->

</div>