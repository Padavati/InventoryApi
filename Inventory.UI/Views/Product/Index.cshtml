@model IEnumerable<Inventory.Entity.Models.Product>


@{
    ViewBag.Title = "Product List";
}

<h2>Product List</h2>

<p>
    @Html.ActionLink("ProductDetails", "Product")
</p>

<table class="table">
    <tr>
        
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Product Description</th>
        <th>Product Price</th>
        <th>Quantity In Stock</th>
        <th></th>
    </tr>

    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ProductId</td>
            <td>@product.ProductName</td>
            <td>@product.ProductDescription</td>
            <td>@product.ProductPrice.ToString("C")</td>
            <td>@product.QuantityInStock</td>

            <td><a asp-controller="Product" asp-action="GetProductDetails" asp-route-ProductId="@product.ProductId" class="btn btn-primary">Edit</a></td>
            <td><a asp-controller="Product" asp-action="DeleteProductDetails" asp-route-ProductId="@product.ProductId" class="btn btn-danger">Delete</a></td>
            
        </tr>
    }
</table>
